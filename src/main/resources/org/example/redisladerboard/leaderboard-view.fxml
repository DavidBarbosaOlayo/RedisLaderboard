<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.redisladerboard.scoreData.LeaderboardController">

    <!-- Sección Top 5 con estilo mejorado -->
    <VBox fx:id="topFiveContainer" spacing="5" style="-fx-background-color: #f0f8ff; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 2px; -fx-border-radius: 5px;">
        <!-- Los elementos se añadirán dinámicamente desde el controlador -->
    </VBox>

    <!-- Tabla principal del leaderboard -->
    <TableView fx:id="tableView" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;" prefWidth="520" prefHeight="900">
        <columns>
            <TableColumn fx:id="playerColumn" text="Jugador" prefWidth="250"/>
            <TableColumn fx:id="scoreColumn" text="Puntuación" prefWidth="250"/>
        </columns>
    </TableView>

</VBox>
